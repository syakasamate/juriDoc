{% extends 'admin.html.twig' %} {% block body %}
<div class="mt-5">
    <div class="container">
        {{ form_start(form) }}
        {{ form_row(form.fichier,{ "attr":{"libelle":"fichier"}}) }}
        {{ form_row(form.description) }}
        {{ form_row(form.createdAt) }}
         <div class="mt-3">
            <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Preference</label>
            <select style=" height:60px;" name="categorie" class="custom-select mr-sm-5" id="inlineFormCustomSelect">
        
            {% for cat in categories %}
           
            {% for sousCat in cat.sousCategorie %}
            <option value="{{ cat.id }}-{{ sousCat.id}}"><b>{{ cat.libelle }}</b> >> {{ sousCat.libelle }}</option>
            {% endfor %}
            {% endfor %}</select>
         </div>
                        <br>
                        {{ form_row(form.save) }}
                        {{ form_end(form) }}
    </div>
</div>
{% endblock %}